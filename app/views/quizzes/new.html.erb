<%= javascript_pack_tag 'quiz' %>

<div class="container">
  <div class="card">
    <div class="current-number">
      <p><%= @current_question_number %></p> <!-- 現在の問題番号 -->
    </div>
    <div class="question">
      <div class="question-title">問題</div>
      <div class="question-word">
        <p><%= @question.content %></p> <!-- 現在の問題の内容 -->
      </div>

      <div class="message-container">
        <!-- 正解メッセージ -->
        <p class="correct-message" style="display: none;">正解です！</p>
        <!-- 不正解メッセージ -->
        <p class="incorrect-message" style="display: none;">不正解です！</p>
      </div>

      <div class="question-choice">
        <ul>
          <% @question.choices.each do |choice| %>
            <li data-choice-id="<%= choice.id %>">
              <input type="radio" name="selected_choice" id="choice_<%= choice.id %>" value="<%= choice.id %>">
              <label for="choice_<%= choice.id %>">
                <%= choice.content %>
              </label>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>



